@page "/"
@using VirtualDice.Server.Services
@inject IGameService GameService

<div class="container" style="height: 100%;">
    <div class="row justify-content-center align-items-center" style="height: 100%;">
        <div class="col">
            <div class="card">
                <div class="card-header">
                    Create game
                </div>
                <div class="card-body">
                    <a href="/game/create" class="stretched-link" style="margin-top: 15px;"></a>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="card">
                <div class="card-header">
                    Join game
                </div>
                <div class="card-body">
                    <a href="/game/join" class="stretched-link" style="margin-top: 15px;"></a>
                </div>
            </div>
        </div>
    </div>
    
</div>

@code {

    bool IsRunningGame { get; set; }

    protected override Task OnInitializedAsync() {
        IsRunningGame = GameService.IsRunningGame;
        return base.OnInitializedAsync();
    }

}